{# CKEditor #}

{% block ckeditor_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>

    <script type="text/javascript">
        {% autoescape true js %}
            var CKEDITOR_BASEPATH = '{{ asset('bundles/milossilnickeditor/ckeditor/ckeditor.js')|replace({'ckeditor.js': ''}) }}';
        {% endautoescape %}
    </script>

    <script type="text/javascript" src="{{ asset('bundles/milossilnickeditor/ckeditor/ckeditor.js') }}"></script>
    
    <script type="text/javascript">
        {% autoescape true js %}
            var instance = CKEDITOR.instances['{{ id }}'];
            if (instance) {
                instance.destroy(true);
            }

            CKEDITOR.replace("{{ id }}",{
              {% for key, val in options %}
                '{{ key }}': [{{ val | json_encode | raw }}],
              {% endfor %}

              filebrowserImageBrowseUrl: '{{ asset('bundles/milossilnickeditor/simogeo-filemanager/index.html') }}',
              'skin': 'BootstrapCK-Skin',
            });
        {% endautoescape %}
    </script>
{% endspaceless %}
{% endblock %}
